<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoadingIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/xxxlarge</item>
        <item name="android:layout_marginTop">@dimen/xxxxlarge</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ConnectivityStatusInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
</resources>
