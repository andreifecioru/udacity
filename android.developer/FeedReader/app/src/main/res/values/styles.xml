<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ConnectivityStatusInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="ArticleListRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/medium</item>
    </style>

    <style name="ArticleListLoadingIndicator">
        <item name="android:layout_width">@dimen/xxxlarge</item>
        <item name="android:layout_height">@dimen/xxxlarge</item>
    </style>

    <style name="ArticleListEmptyView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ArticleListEmptyViewNoArticlesImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/attention</item>
    </style>

    <style name="ArticleListItemCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/xsmall</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="ArticleListItemThumbnail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ArticleListItemTitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/medium</item>
        <item name="android:paddingTop">@dimen/medium</item>
        <item name="android:paddingRight">@dimen/medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">4</item>
    </style>

    <style name="ArticleListItemSubtitle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/medium</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ArticleDetailsPager">
        <item name="android:layout_width">@dimen/article_content_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ArticleDetailsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ArticleDetailsAppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:theme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ArticleDetailsToolbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ArticleDetailsPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="ArticleDetailsToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="ArticleDetailsToolbar.Scrim">
        <item name="android:background">@drawable/photo_scrim</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="ArticleDetailsBodyContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ArticleDetailsSubtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|start</item>
        <item name="android:paddingStart">@dimen/xxlarge</item>
        <item name="android:paddingEnd">@dimen/xxlarge</item>
        <item name="android:paddingBottom">@dimen/small</item>
        <item name="android:paddingTop">@dimen/small</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="ArticleDetailsBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/xlarge</item>
        <item name="android:paddingStart">@dimen/medium</item>
        <item name="android:paddingEnd">@dimen/medium</item>
        <item name="android:paddingBottom">@dimen/medium</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="ArticleDetailsFAB">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
        <item name="android:src">@drawable/ic_share</item>

        <!--
            Sadly, this has no effect when FAB is anchored
            onto a CollapsingToolbarLayout...
        -->
        <item name="android:elevation">6dp</item>
    </style>

</resources>
