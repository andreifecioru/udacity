<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ArticleListItemCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.android.example.feedreader.utils.ui.DynamicHeightNetworkImageView
            android:id="@+id/iv_thumbnail"
            style="@style/ArticleListItemThumbnail" />

        <TextView
            android:id="@+id/tv_article_title"
            style="@style/ArticleListItemTitle" />

        <TextView
            android:id="@+id/tv_article_subtitle"
            style="@style/ArticleListItemSubtitle" />

    </LinearLayout>

</android.support.v7.widget.CardView>