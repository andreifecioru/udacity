<?xml version="1.0" encoding="utf-8"?>
<!--
The layout for the header on top of the navigation drawer.
-->
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_menu_header_height"
    android:background="@drawable/funtravel" >

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small"
        android:text="@string/travel_for_fun"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/nav_menu_header_title_text_size"
        android:textStyle="bold"
        android:elevation="@dimen/xsmall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>