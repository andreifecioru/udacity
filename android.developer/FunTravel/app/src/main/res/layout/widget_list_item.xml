<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/medium"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_offer_type"
        android:layout_width="@dimen/xxxxlarge"
        android:layout_height="@dimen/xxxxlarge"
        android:paddingEnd="@dimen/medium"
        android:contentDescription="@string/offer_photo_description"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_offer_title"
            style="@style/OfferListItemTitleWidget" />


        <TextView
            android:id="@+id/tv_offer_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:paddingTop="@dimen/medium"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>


