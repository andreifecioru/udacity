<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.DarkAccent" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="MovieListRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="MovieListRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_marginTop">@dimen/medium</item>
    </style>

    <style name="MovieListLoadingIndicator">
        <item name="android:layout_width">@dimen/xxxlarge</item>
        <item name="android:layout_height">@dimen/xxxlarge</item>
    </style>

    <style name="MovieListNavigationDrawer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="MovieListEmptyView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MovieListEmptyViewNoMoviesImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/no_movies</item>
    </style>

    <style name="MovieListEmptyViewNoInternetImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/no_internet</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MovieListEmptyViewTryAgainButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDarker</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:text">@string/try_again</item>
    </style>

    <style name="MovieListItemPosterContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/medium</item>
    </style>

    <style name="MovieListItemPoster">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium</item>
    </style>

    <style name="MovieListFavouriteButton">
        <item name="android:layout_width">@dimen/xxlarge</item>
        <item name="android:layout_height">@dimen/xxlarge</item>
        <item name="android:background">@drawable/rounded_corners_bg_2</item>
        <item name="android:layout_margin">@dimen/xsmall</item>
        <item name="android:src">@android:drawable/star_big_off</item>
    </style>

    <style name="MovieListPopularity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corners_bg</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/xsmall</item>
    </style>

    <style name="MovieListItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">@dimen/small</item>
    </style>

    <style name="MovieListRatingContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">@dimen/small</item>
        <item name="android:background">@drawable/rounded_corners_bg</item>
    </style>

    <style name="MovieListRatingStar">
        <item name="android:layout_width">@dimen/large</item>
        <item name="android:layout_height">@dimen/large</item>
        <item name="android:src">@android:drawable/star_off</item>
    </style>

    <style name="ConnectivityStatusInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="MovieDetailsRoot">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="MovieDetailsBackdropContainer">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MovieDetailsBackdrop">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MovieDetailsFavouriteButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/medium</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/rounded_corners_bg</item>
        <item name="android:drawableEnd">@android:drawable/star_big_off</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:padding">8sp</item>
        <item name="android:drawablePadding">4sp</item>
        <item name="android:text">@string/mark_as_favourite</item>
    </style>

    <style name="MovieDetailsRecycleView">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="MovieDetailsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">@dimen/medium</item>
    </style>

    <style name="MovieDetailsDefaultStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <style name="MovieDetailsTitle" parent="MovieDetailsDefaultStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MovieDetailsUserRating" parent="MovieDetailsDefaultStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/user_rating</item>
    </style>

    <style name="MovieDetailsReleaseDate" parent="MovieDetailsDefaultStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:text">@string/release_date</item>
    </style>

    <style name="MovieDetailsSynopsis" parent="MovieDetailsDefaultStyle">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MovieDetailsSectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:padding">@dimen/small</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="MovieDetailsListContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/touch_selector</item>
    </style>

    <style name="MovieDetailsListItemIcon">
        <item name="android:layout_width">@dimen/xxxxlarge</item>
        <item name="android:layout_height">@dimen/xxxxlarge</item>
        <item name="android:padding">@dimen/small</item>
    </style>

    <style name="MovieDetailsListItemTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/small</item>
        <item name="android:layout_marginTop">@dimen/small</item>
        <item name="android:layout_marginEnd">@dimen/small</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieDetailsListItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/small</item>
        <item name="android:layout_marginBottom">@dimen/small</item>
        <item name="android:layout_marginEnd">@dimen/small</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:textStyle">italic</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MovieDetailsLoadingIndicator">
        <item name="android:theme">@style/AppTheme.DarkAccent</item>
        <item name="android:layout_width">@dimen/xxxxlarge</item>
        <item name="android:layout_height">@dimen/xxxxlarge</item>
        <item name="android:layout_margin">@dimen/small</item>
    </style>

    <style name="MovieDetailsListItemSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="MovieDetailsTrailerIcon" parent="MovieDetailsListItemIcon">
        <item name="android:src">@drawable/movie</item>
    </style>

    <style name="MovieDetailsTrailerTitle" parent="MovieDetailsListItemTitle" />

    <style name="MovieDetailsReviewIcon" parent="MovieDetailsListItemIcon">
        <item name="android:src">@drawable/author</item>
    </style>

    <style name="MovieDetailsReviewTitle" parent="MovieDetailsListItemTitle" />

    <style name="ReviewDetailsContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/medium</item>
        <item name="android:padding">@dimen/medium</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
    </style>

</resources>
