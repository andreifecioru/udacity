<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.jukebox">

    <application
        android:name=".JukeboxApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".AlbumListActivity"
            android:label="@string/album_list">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AlbumDetailsActivity"
            android:label="@string/album_details"
            android:theme="@style/AppThemeNoActionBar" />

        <activity
            android:name=".SongDetailsActivity"
            android:label="@string/song_details"
            android:theme="@style/AppThemeNoActionBar" />
    </application>

</manifest>