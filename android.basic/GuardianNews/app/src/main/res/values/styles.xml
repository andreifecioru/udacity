<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="news_list_item_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/medium</item>
        <item name="android:textSize">@dimen/news_list_item_title_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="news_list_item_author">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/medium</item>
        <item name="android:layout_marginStart">@dimen/medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/news_list_item_author_text_size</item>
    </style>

    <style name="news_list_item_pillar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/small</item>
        <item name="android:layout_marginStart">@dimen/medium</item>
        <item name="android:padding">@dimen/xsmall</item>
        <item name="android:minWidth">@dimen/news_list_item_pillar_min_width</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/news_list_item_pillar_text_size</item>
        <item name="android:background">@drawable/rounded_corners_bg</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="news_list_item_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/news_list_item_date_time_text_size</item>
    </style>

    <style name="news_list_item_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/news_list_item_date_time_text_size</item>
    </style>
</resources>
