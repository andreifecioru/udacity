<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_menu_header_height"
    android:background="@drawable/nav_menu_header_background" >

    <ImageView
        android:id="@+id/app_icon_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium"
        android:layout_marginTop="@dimen/medium"
        android:src="@drawable/tour_guide_round_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/medium"
        android:layout_marginTop="@dimen/medium"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/nav_menu_header_title_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/app_icon_image_view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/app_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/large"
        android:text="@string/best_friend_in_bucharest"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/nav_menu_header_subtitle_text_size"
        android:textStyle="italic"
        android:textAlignment="viewEnd"
        android:minLines="2"/>

</android.support.constraint.ConstraintLayout>