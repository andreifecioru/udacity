<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="location_card_name">
        <item name="android:padding">@dimen/small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/location_card_name_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="location_card_description">
        <item name="android:padding">@dimen/small</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:background">@color/colorPrimaryDarkTransparent</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/location_card_description_font_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="location_card_rating_star">
        <item name="android:layout_width">@dimen/location_card_rating_star_size</item>
        <item name="android:layout_height">@dimen/location_card_rating_star_size</item>
        <item name="android:src">@android:drawable/star_off</item>
    </style>
</resources>
