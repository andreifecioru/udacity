<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="quake_list_item_mag">
        <item name="android:layout_width">@dimen/quake_list_item_mag_size</item>
        <item name="android:layout_height">@dimen/quake_list_item_mag_size</item>
        <item name="android:textSize">@dimen/quake_list_item_mag_text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/quake_item_mag_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="quake_list_item_location">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/medium</item>
        <item name="android:layout_marginStart">@dimen/medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColorEarthquakeDetails</item>
        <item name="android:textSize">@dimen/quake_list_item_location_text_size</item>
    </style>

    <style name="quake_list_item_place">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/medium</item>
        <item name="android:layout_marginStart">@dimen/medium</item>
        <item name="android:textColor">@color/textColorEarthquakeLocation</item>
        <item name="android:textSize">@dimen/quake_list_item_place_text_size</item>
    </style>

    <style name="quake_list_item_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/medium</item>
        <item name="android:textColor">@color/textColorEarthquakeDetails</item>
        <item name="android:textSize">@dimen/quake_list_item_date_time_text_size</item>
    </style>

    <style name="quake_list_item_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/medium</item>
        <item name="android:textColor">@color/textColorEarthquakeDetails</item>
        <item name="android:textSize">@dimen/quake_list_item_date_time_text_size</item>
    </style>
</resources>
